<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Michael Rhodes">

    <title><%= title %></title>

    <!-- Stylesheets -->
    <link href="../../static/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../static/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet">
    <link href="../../static/css/starter-template.css" rel="stylesheet">
    <link href="../../static/css/signin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>


</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="../../patient/my_information/<%= patient_id %>"><%= title %></a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="../../patient/my_information/<%= patient_id %>">Home</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <br>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="btn-group">
          <button type="button" class="btn btn-default navbar-btn">Make New Appointment</button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <h2><%= patient_first_name %> <%= patient_last_name %> - Patient Information</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <table id="patient_info_table1" class="table display" cellspacing="0" width="100%">
          <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Email</th>
            </tr>
          </thead>

          <tbody>
            <% for(var i=0; i<patient.length; i++) {%>
              <tr>
                  <td><%= patient[i].patient_first_name %></td>
                  <td><%= patient[i].patient_last_name %></td>
                  <td><%= patient[i].patient_age %></td>
                  <td><%= patient[i].patient_email %></td>
              </tr>
            <% } %>
          <tbody>
        </table>

        <table id="patient_info_table2" class="table display" cellspacing="0" width="100%">
          <thead>
            <tr>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
                <th>Phone Number</th>
            </tr>
          </thead>

          <tbody>
            <% for(var i=0; i<patient.length; i++) {%>
              <tr>
                  <td><%= patient[i].patient_street_address %></td>
                  <td><%= patient[i].patient_city %></td>
                  <td><%= patient[i].patient_state %></td>
                  <td><%= patient[i].patient_zip_code %></td>
                  <td><%= patient[i].patient_phone_number %></td>
              </tr>
            <% } %>
          <tbody>
        </table>
      </div>
    </div>

  </div><!-- /.container -->

  <!-- jQuery -->
  <script type="text/javascript" src="../../static/jquery/dist/jquery.min.js"></script>
  <!-- Datatables -->
  <!-- <script type="text/javascript" src="../static/datatables.net/js/jquery.dataTables.js"></script>
  <script type="text/javascript" src="../static/datatables.net-bs/js/dataTables.bootstrap.js"></script> -->
  <!-- Bootstrap Core JavaScript -->
  <script type="text/javascript" src="../../static/bootstrap/dist/js/bootstrap.min.js"></script>

</body>

</html>
