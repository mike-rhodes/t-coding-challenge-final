    <div class="row">
      <div class='col-sm-6'>
          <div class="form-group">
            <form action="/create_new_appointment" method="post">

              <label for="patient_name">Select list:</label>
              <select class="form-control" id="patient_id" name="patient_id">
                <% for(var i=0; i<patients.length; i++) {%>
                  <option value="<%= patients[i].patient_id %>"><%= patients[i].patient_first_name %> <%= patients[i].patient_last_name %></option>
                <% } %>
              </select>

              <label for="date">Appointment Date: </label>
              <div class='input-group date' id='datetimepicker1'>
                  <input type='text' id = "appointment_date" name= "appointment_date" class="form-control" />
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>

              <label for="date">Note: </label>
              <input type='text' id = "doctor_note" name="doctor_note" class="form-control" />

              <input type="submit" value="Submit"></input>
            </form>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datetimepicker1').datetimepicker();
          });
